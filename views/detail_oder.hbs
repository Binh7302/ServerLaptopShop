      <h3><i class="fa fa-angle-right"></i> Xử lý Đơn hàng</h3>

      <!-- BASIC FORM ELELEMNTS -->
      <div class="row mt">
        <div class="col-lg-12">
          <div class="form-panel">
            <h4 class="mb"><i class="fa fa-angle-right"></i> Thông tin Đơn hàng</h4>
            <form class="form-horizontal style-form" method="post" action="/oders/odersProcessing/{{oder._id}}/edit"
              enctype="multipart/form-data">
              <div class="form-group">
                <label class="col-sm-2 col-sm-2 control-label">Tên khách hàng</label>
                <div class="col-sm-10">
                  <input disabled type="text" class="form-control" type="text" name="name" id="name"
                    value="{{user.name}}" placeholder="Tên khách hàng">
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 col-sm-2 control-label">Email</label>
                <div class="col-sm-10">
                  <input disabled type="text" class="form-control" type="text" name="email" id="email"
                    value="{{user.email}}" placeholder="Email">
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 col-sm-2 control-label">Số điện thoại</label>
                <div class="col-sm-10">
                  <input disabled type="text" class="form-control" type="text" name="phonenumber" id="phonenumber"
                    value="{{user.phonenumber}}" placeholder="Số điện thoại">
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 col-sm-2 control-label">Địa chỉ</label>
                <div class="col-sm-10">
                  <input disabled type="text" class="form-control" type="text" name="address" id="address"
                    value="{{oder.address}}" placeholder="Địa chỉ">
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 col-sm-2 control-label">Tổng tiền</label>
                <div class="col-sm-10">
                  <input disabled type="text" class="form-control" type="text" name="total" id="total"
                    value="{{oder.total}}" placeholder="Tổng tiền">
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 col-sm-2 control-label">Ngày tạo</label>
                <div class="col-sm-10">
                  <input disabled type="text" class="form-control" type="text" name="createAt" id="createAt"
                    value="{{oder.createAt}}" placeholder="Ngày tạo">
                </div>
              </div>
              <div class="form-group" style="margin-left: 0px; margin-right: 0px;">
                <label>Trạng thái</label>
                <select class="form-control" name="statusID" style="width: 300px; display: inline-block; margin-left: 135px;">
                  {{#each status}}
                  {{#if this.selected}}
                  <option selected style="color: black;" value="{{this._id}}">{{this.name}}
                  </option>
                  {{else}}
                  <option style="color: black;" value="{{this._id}}">{{this.name}}
                  </option>
                  {{/if}}
                  {{/each}}
                </select>
              </div>
              <button type="submit" id="submit" style="margin-left: 1050px; width:100px">Lưu</button>
            </form>
          </div>
        </div><!-- col-lg-12-->
      </div><!-- /row -->

 
    </section>
    </section>
    <div style="position: absolute; top: 750px; left: 230px; margin-bottom: 50px;" class="content" >
