                </div>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th style="width: 40px;">STT</th>
                            <th style="width: 200px;">Mã sản phẩm</th>
                            <th style="width: 200px;">Tên sản phẩm</th>
                            <th style="width: 80px;">Giá</th>
                            <th style="width: 80px;">Số lượng</th>
                            <th style="width: 150px;">Hình ảnh</th>      
                        </tr>
                    </thead>
                    <tbody>
                        {{#each cartDetail}}
                        <tr>
                            <td>{{this.index}}</td>
                            <td>{{this.productID._id}}</td>
                            <td>{{this.productID.name}}</td>
                            <td>{{this.amount}}</td>
                            <td>{{this.quantityPurchased}}</td>
                            <td>
                                <img src="{{this.productID.image}}" width="150" height="125">
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
